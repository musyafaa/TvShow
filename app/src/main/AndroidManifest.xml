<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tvshow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TvShow">
        <activity
            android:name=".presentation.onair.TvOnAirDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.today.TvTodayDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.onair.DetailsTvOnAirActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.today.TodayTvActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.onair.OnAirTvActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.populartv.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.populartv.PopularTvActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>